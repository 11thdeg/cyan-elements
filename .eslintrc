{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "lit"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:wc/recommended",
      "plugin:lit/recommended"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-extra-semi": "error"
    }
  }